{
  "manifest_version": 2,
  "name": "GitHub suite",
  "description": "Open-source extension which adds a bunch of useful additions to the GitHub UI",
  "short_name": "Github suite",
  "version": "1.0.0",
  "icons": {},
  "content_scripts": [
    {
      "matches": [
        "https://www.github.com/*",
        "http://www.github.com/*",
        "https://github.com/*",
        "http://github.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options/options.html",
  "permissions": ["storage"],
  "web_accessible_resources": []
}
